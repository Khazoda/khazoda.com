{
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-css-order"],
	"pluginSearchDirs": ["."],
	"cssDeclarationSorting": "grouped-by-type",
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"svelteStrictMode": false,
				"svelteAllowShorthand": true,
				"svelteBracketNewLine": false,
				"svelteIndentScriptAndStyle": true,
				"cssDeclarationSorterOrder": "smacss"
			}
		},
		{
			"files": ["**/*.css", "**/*.scss", "**/*.svelte"],
			"options": {
				"singleQuote": false,
				"cssDeclarationSorterOrder": "smacss",
				"printWidth": 120
			}
		}
	],
	"bracketSameLine": true,
	"htmlWhitespaceSensitivity": "css",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"proseWrap": "always",
	"endOfLine": "lf",
	"singleAttributePerLine": false
}
